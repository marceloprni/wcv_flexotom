<% if(acionaWarmin == true)  { %>
    <div class="alert alert-warning alert-dismissible fade show" role="alert" id="alerta">
        <strong id="mensagemErro"><%= erro %></strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% } %>  

<div class="login_container_principal container-fluid h-100">


    <img src="/image/login/img_centro.png" alt="imagem centro">

    <div class="container-login">
      <form id="formLogin" method="POST" action="/login">
              <h3>LOGIN</h3>

              <span>EMAIL</span>
              
              <div class="email_container">
                <img src="/image/login/email.svg" alt="email">
                <input type="text" class="form-control" id="usuario" name="usuario" placeholder="UsuÃ¡rio" required>
              </div>
       
              <span>PASSWORD</span>

              <div class="senha_container">
                <img src="/image/login/cadeado.svg" alt="password">
                <input type="password" class="form-control" id="senha" name="senha" placeholder="" required>
              </div>
              
     
              <button type="submit" class="btn_enviar">Entrar</button>
      </form>
    </div>
   
</div>



