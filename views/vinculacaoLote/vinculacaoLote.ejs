<%- include ('../partials/header.ejs'); -%>
<%- include ('../partials/navbar.ejs'); -%>


<main class="container_main">
    <section class="container_section_first">
        <div class="group_seleciona_materia group_seleciona_vinculaLote">
            
            <div class="form-group group_input_parametros">
                <label for="">CLIQUE AQUI</label>
                <input type="text" class="form-control inputPrima" id="buscarLoteInput" placeholder="">
            </div>

            <button class="btn_criar btn_criar_vinculaLote" id="btnBuscarLote">BUSCAR LOTE</button>
        </div>

        <div class="group_selectiona_btn">
            <button class="btn_tabela" id="btn_vincular_lote">DELETAR LOTE</button>
        </div>
    </section>

    <section class="container_section_second">
        <div class="container_table table_vincular_principal">
            <table class="table text-black tabela_Cadastro table_vinculo" id="tabela-VincularLote"></table>
        </div>
    </section>
</main>

<div class="modal fade justify-content-center align-items-center align-self-center" id="barCodeModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" id="barCodeDivPrincipal" role="document">
        <div class="modal-content modal_global_vincula" id="barCodeDiv">
            <section class="geral_modal_vincular">
                    <H3> VINCULAR LOTE</H3>
                    <div class="form-group group_input_parametros">
                        <label for="">LOTE</label>
                        <input type="text" class="form-control input_modal_vincula" id="LoteInput" placeholder="">
                    </div>

                    <div class="form-group group_input_parametros">
                        <label for="">MATERIA PRIMA</label>
                        <input type="text" class="form-control input_modal_vincula" id="MateriaInput" placeholder="">
                    </div>
                    
                    <div class="form-group group_input_parametros">
                        <button class="btn_vincular_lote" id="btnVinculaLoteFinal">VINCULAR LOTE</button>
                    </div>
            </section>
        </div>
        </div>
    </div>
</div>

<div class="modal fade justify-content-center align-items-center align-self-center" id="deleteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" id="barCodeDivPrincipal" role="document">
        <div class="modal-content modal_global_vincula" id="barCodeDiv">
            <section class="geral_modal_vincular">
                    <H3>DELETAR LOTE</H3>
                    <div class="form-group group_input_parametros">
                        <label for="">LOTE</label>
                        <input type="text" class="form-control input_modal_vincula" id="delete_lote" placeholder="">
                    </div>

                    <div class="form-group group_input_parametros">
                        <label for="">MATERIA PRIMA</label>
                        <input type="text" class="form-control input_modal_vincula" id="delete_materia" placeholder="">
                    </div>
                    
                    <div class="form-group group_input_parametros">
                        <button class="btn_vincular_lote" id="btnDeletarFinal">DELETAR LOTE</button>
                    </div>
            </section>
        </div>
        </div>
    </div>
</div>

<%- include ('../partials/footer.ejs'); -%>
